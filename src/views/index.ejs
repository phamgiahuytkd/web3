                    <script>
                        // Truyền dữ liệu từ EJS vào JavaScript
                        const Ngay_bat_dau = new Date('<%= best_Discount.Ngay_bat_dau %>').getTime();
                        const Ngay_ket_thuc = new Date('<%= best_Discount.Ngay_ket_thuc %>').getTime();
                
                        // Hàm đếm ngược
                        function countdown() {
                            const now = new Date().getTime();
                            const distance = Ngay_ket_thuc - now;

                            if (distance < 0) {
                                clearInterval(interval);
                                document.getElementById('countdown').innerHTML = "HẾT HẠN";
                                return;
                            }

                            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60)).toString().padStart(2, '0');
                            const seconds = Math.floor((distance % (1000 * 60)) / 1000).toString().padStart(2, '0');

                            document.getElementById('countdown').innerHTML = `${hours}:${minutes}:${seconds}`;
                        }

                        const interval = setInterval(countdown, 1000);

                        // Gọi countdown() ngay lập tức để hiển thị lần đầu tiên mà không phải đợi 1 giây
